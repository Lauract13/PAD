<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <!--linear layaut del mapa -->

    <LinearLayout
        android:layout_weight="1"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <!--fragmentno del mapa -->

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity"
            tools:layout="@android:layout/activity_list_item"></fragment>



    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="gps.ucm.seekers.MainActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:gravity="center">

        <Button xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/bMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Menu"
            android:text="Menu"
            android:textColor="@android:color/holo_blue_light"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Menu" />

        <Button xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/bMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Mapa"
            android:text="Mapa"
            android:textColor="@android:color/holo_blue_light"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Mapa" />

        <Button xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/bPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Perfil"
            android:text="Perfil"
            android:textColor="@android:color/holo_blue_light"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Perfil" />

    </LinearLayout>





</LinearLayout>